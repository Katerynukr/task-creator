{% extends 'base.html.twig' %}

{% block title %}Create new Node
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div>
					<div>
						<h1>Create new Node </h1>
					</div>

					<div>
						<form action="{{path('note_store')}}" method="POST">
							<div class="form-group">
								<label>Title:</label>
								<input type="text" class="form-control" name="note_title" value="{{note_title}}">
								<small class="form-text text-muted">Note name.</small>
							</div>
                            <div class="form-group">
								<label>Priority:</label>
								<input type="text" class="form-control" name="note_priority" value="{{note_priority}}">
								<small class="form-text text-muted">Note priority.</small>
							</div>
                            <div class="form-group">
								<label>Notes:</label>
                                <textarea name="note_note" id="summernote">{{note_note|raw}}</textarea>
							</div>
                            <div class="form-group">
								<label>Status:</label>
                                <select name="note_status_id" class="form-control">
									<option value="0">Select status</option>
									{% for status in statuses %}
										<option value="{{status.id}}" {% if status.id == note_status %}selected{% endif %}>{{status.title}}</option>
									{% endfor %}
								</select>
								<small class="form-text text-muted">Statuses available.</small>
							</div>
							<input type="hidden" name="token" value="{{ csrf_token('check_csrf_hidden') }}"/>
							<button type="submit" class="btn btn-dark btn-add save-btn btn-block">Add new Note</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}